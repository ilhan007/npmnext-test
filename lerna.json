{
	"packages": [
		"packages/*"
	],
	"version": "1.5.0",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"version": {
			"allowBranch": "main",
			"conventionalCommits": true,
			"yes": true,
			"message": "chore(release): publish %s [ci skip]"
		},
		"publish": {
			"allowBranch": "main",
			"conventionalCommits": true,
			"yes": true,
			"verifyAccess": false,
			"preDistTag": "next",
			"message": "chore(release): publish %s [ci skip]"
		}
	}
}